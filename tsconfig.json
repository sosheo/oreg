{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": false,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "outDir": "./dist",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["./src/**/*.ts", "./tests/**/*.ts"],
    "exclude": ["node_modules"]
}
  